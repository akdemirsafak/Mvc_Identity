@model RoleCreateViewModel


@{
    ViewBag.Title = "Rol Oluştur";
    Layout = "_Layout";
}

<partial name="_ValidationScriptsPartial"/>

@if (TempData["SuccessMessage"] is not null)
{
    <div class="alert alert-info" role="alert"> @TempData["SuccessMessage"] </div>
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h2 class="mb-5">Rol oluştur</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="form-text"></span>
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>