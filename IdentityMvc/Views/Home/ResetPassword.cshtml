@model ResetPasswordViewModel


@{
    ViewBag.Title = "Parola Sıfırlama / Yeni şifre belirleme";
    Layout = "_Layout";
}



@if (TempData["SuccessMessage"] is not null)
{
    <div class="alert alert-info" role="alert"> @TempData["SuccessMessage"] </div>
}

<div class="row">

    <div class="col-md-4 offset-4">
        <h2 class="mb-5">Parola Sıfırlama / Yeni şifre belirleme</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <form method="post">

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PasswordConfirm" class="form-label"></label>
                <input asp-for="PasswordConfirm" class="form-control">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Şifre yenile</button>
        </form>
    </div>
</div>